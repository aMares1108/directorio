{% extends "base.jinja" %}

{% block content %}

<div class="album py-5 bg-light">
  <div class="container">
    <div class="row">
    {% for result in results %}
        <div class="col-md-3" id="{{result.get('Nombre','')}}">
          <div class="card mb-3 box-shadow">
            <img class="card-img-top" src={{ result.pop("Foto", "https://upload.wikimedia.org/wikipedia/commons/1/14/No_Image_Available.jpg") }}  alt="Card image cap">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="http://wa.me/52{{result.pop("Telefono", "")}}" target="_blank"><button type="button" class="btn btn-sm btn-outline-secondary">Contacto</button></a>
                </div>
                <small class="text-muted">GAP {{result.pop("GAP","desconocido")}} </small>
              </div>
              {% for param in result %}
                <p class="card-text">
                  <b>{{ param }}: </b>
                  {{ result[param] }}
                </p>
              {% endfor %}
              {# <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p> #}
            </div>
          </div>
        </div>
    {% endfor %}
    </div>
  </div>
</div>

{% endblock content %}
