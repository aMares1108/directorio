{% extends "base.jinja" %}

{% block content %}
<center>
    <h1>Bienvenido, Staff, a la Jornada</h1>
    <img src="https://affinitynumerology.com/images/122-400(20170213).jpg" alt="122"
        width="100px">
</center>

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            {% for result in results %}
            <div class="col-md-3 col-sm-6" id="{{result.nombre}}">
                <div class="card mb-3 box-shadow">
                    <img class="card-img-top" src={{ result.foto
                        or "https://upload.wikimedia.org/wikipedia/commons/1/14/No_Image_Available.jpg" }}
                        alt="¡No se encontró la fotografía!">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="http://wa.me/52{{result.telefono}}" target="_blank"><button type="button"
                                        class="btn btn-sm btn-outline-secondary">Contacto</button></a>
                            </div>
                            <small class="text-muted font-weight-light px-2">GAP {{result.gap or "desconocido"}}
                            </small>
                        </div>
                        {# {% for param in result %} #}
                        <p class="card-text">
                            <b>Nombre: </b>
                            {{ result.nombre }}
                        </p>
                        <p class="card-text">
                            <b>Estiramiento: </b>
                            {{ result.estiramiento or "" }}
                        </p>
                        <p class="card-text">
                            <b>Contrato: </b>
                            {{ result.contrato or "" }}
                        </p>
                        <p class="card-text">
                            <b>Edad: </b>
                            {{ result.edad or "??" }}
                        </p>
                        <p class="card-text">
                            <b>Ocupación: </b>
                            {{ result.ocupacion or "Desconocida" }}
                        </p>
                        <p class="card-text">
                            <b>Residencia: </b>
                            {{ result.residencia or "No proporcionada" }}
                        </p>
                        {# {% endfor %} #}
                        {# <p class="card-text">This is a wider card with supporting text below as a natural lead-in to
                            additional
                            content. This content is a little bit longer.</p> #}
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>

{% endblock content %}