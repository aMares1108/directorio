{% extends "base_login.jinja" %}

{% block content %}
<div class="column is-4 is-offset-4">
    <h3 class="title">Nuevo staff por {{name}}</h3>
    <div class="box">
        {% with messages = get_flashed_messages() %}
        {% if messages %}
        <div class="notification is-danger">
            {{ messages[0] }}
        </div>
        {% endif %}
        {% endwith %}
        <form method="POST" action="{{ url_for('register.new_staff') }}">
            <div class="field">
                <div class="control">
                    <input class="input is-large" type="text" name="nombre" placeholder="Nombre del staff" autofocus="">
                </div>
            </div>

            <div class="field">
                <div class="control">
                    <input class="input is-large" type="text" name="gap" placeholder="### Nombre del GAP">
                </div>
            </div>

            <div class="field">
                <div class="control">
                    <input class="input is-large" type="text" name="estiramiento" placeholder="Estiramiento">
                </div>
            </div>

            <div class="field">
                <div class="control">
                    <input class="input is-large" type="text" name="contrato" placeholder="Yo soy un hombre / una mujer">
                </div>
            </div>

            <div class="field">
                <div class="control">
                    <input class="input is-large" type="number" name="edad" placeholder="##">
                </div>
            </div>

            <div class="field">
                <div class="control">
                    <input class="input is-large" type="text" name="foto" placeholder="/static/nombre.jpg">
                </div>
            </div>

            <div class="field">
                <div class="control">
                    <input class="input is-large" type="tel" maxlength="10" minlength="10" name="telefono" placeholder="##-####-####">
                </div>
            </div>

            <div class="field">
                <div class="control">
                    <input class="input is-large" type="text" name="ocupacion" placeholder="OcupaciÃ³n">
                </div>
            </div>

            <div class="field">
                <div class="control">
                    <input class="input is-large" type="text" name="residencia" placeholder="Residencia">
                </div>
            </div>

            <button class="button is-block is-info is-large is-fullwidth">Login</button>
        </form>
    </div>
</div>
{% endblock %}