{% extends "base_login.jinja" %}

{% block content %}
<div class="column is-4 is-offset-4">
    <h3 class="title">Agregar extra para {{staff.nombre}} </h3>
    <div class="box">
        {% with messages = get_flashed_messages() %}
        {% if messages %}
        <div class="notification is-danger">
            {{ messages[0] }}
        </div>
        {% endif %}
        {% endwith %}
        <form method="POST" action="{{ url_for('register.add_extra', id=staff.id) }}">
            <div class="field">
                <div class="control">
                    <input class="input is-large" type="text" name="nombre" placeholder="Nombre" autofocus="" required>
                </div>
            </div>

            <div class="field">
                <div class="control">
                    <input class="input is-large" type="text" name="valor" placeholder="Valor" required>
                </div>
            </div>
            <button class="button is-block is-info is-large is-fullwidth">Agregar</button>
        </form>
    </div>
</div>
{% endblock %}